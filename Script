n = [0:199];
words = 'Enter a fcn for x(n)';
x = input(words)	%sin((3*pi/100).*n) as the input%
for i = 1:200
    if n(i) == 0
	y(i) = (-1.5*x(i))+(2*x(i+1))+(-0.5*x(i+2));
    elseif (n(i) > 0) && (n(i) < 198)
	y(i) = (0.5*x(i+1))+(-0.5*x(i-1));
    elseif n(i) == 199
	y(i) = (1.5*x(i))+(-2*x(i-1))+(0.5*x(i-2));
    end
end

plot(n,x)
hold
plot(n,y)
legend('x(n)','y(n)')
